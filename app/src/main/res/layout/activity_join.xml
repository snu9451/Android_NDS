<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:background="@color/ndsyellow_light">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar_main" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/ndsblue_light"
            android:layout_marginBottom="10dp"/>
        <TableLayout
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white"
            android:stretchColumns="0,1,2"
            android:padding="10dp">
            <TableRow>
                <TextView
                    android:text="ID"
                    android:layout_column="0"/>
                <EditText
                    android:layout_width="200dp"
                    android:hint="nds@example.com"
                    android:textSize="14sp"
                    android:layout_column="1"/>
                <Button
                    android:layout_column="2"
                    android:text="중복확인" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="닉네임"
                    android:layout_column="0"/>
                <EditText
                    android:hint="2글자 이상"
                    android:textSize="14sp"
                    android:layout_column="1"/>
                <Button
                    android:text="중복확인"
                    android:layout_column="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="3"
                    android:textSize="14sp"
                    android:text=" 비밀번호"
                    android:gravity="bottom"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"/>
            </TableRow>
            <TableRow>
                <EditText
                    android:layout_span="3"
                    android:textSize="14sp"
                    android:hint="8~20자 영문/숫자로 구성된 비밀번호 입력"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="3"
                    android:text="비밀번호 확인"/>
            </TableRow>
            <TableRow>
                <EditText
                    android:layout_span="3"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="3"
                    android:text="이곳에 비밀번호 일치여부 표시"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="3"
                    android:text="휴대폰 번호 인증"
                    android:gravity="bottom"
                    android:textSize="13sp"
                    android:drawableLeft="@drawable/ic_baseline_phone_android_24"/>
            </TableRow>
            <TableRow>
                <EditText
                    android:layout_column="0"
                    android:layout_span="2"
                    android:textSize="14sp"
                    android:hint="'-' 없이 입력"/>
                <Button
                    android:layout_column="1"
                    android:layout_span="1"
                    android:textSize="11sp"
                    android:text="인증번호 발송" />
            </TableRow>
            <TableRow>
                <EditText
                    android:layout_column="0"
                    android:layout_span="2"
                    android:textSize="14sp"
                    android:hint="인증번호 6자리 입력"/>
                <Button
                    android:layout_column="1"
                    android:layout_span="1"
                    android:textSize="11sp"
                    android:text="인증번호 확인" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_span="3"
                    android:text="이곳에 인증번호 일치여부 표시"/>
            </TableRow>
        </TableLayout>
        <CheckBox
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="개인정보 처리 약관에 동의"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dblue"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="회원가입하기"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>